{
  "name": "conduit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build && react-snapshot",
    "test": "react-scripts-ts test --env=jsdom",
    "test:CI": "bash -c 'CI=true npm test'",
    "eject": "react-scripts-ts eject",
    "postreceive": "npm run build",
    "precommit": "lint-staged",
    "prepush": "lint-staged && bash -c 'CI=true npm run build'",
    "prettier": "bash -c 'prettier ./src/**/*.ts ./src/**/*.tsx -l'",
    "prettier:write": "bash -c 'prettier ./src/**/*.ts ./src/**/*.tsx --write'",
    "tslint": "tslint --project tsconfig.json",
    "tslint:check": "tslint-config-prettier-check ./tslint.json",
    "tslint:fix": "tslint --project tsconfig.json --fix",
    "fix": "npm run tslint:fix && npm run prettier:write"
  },
  "lint-staged": {
    "definitions/**/*.ts": [
      "npm run tslint",
      "npm run prettier"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run tslint",
      "npm run prettier",
      "npm run test:CI"
    ],
    "tslint.json": [
      "npm run tslint:check"
    ]
  },
  "dependencies": {
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts-ts": "2.8.0",
    "react-snapshot": "^1.3.0",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "reselect": "^3.0.1",
    "rxjs": "^5.5.5"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.5",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.57",
    "@types/react": "^16.0.28",
    "@types/react-dom": "^16.0.3",
    "@types/react-helmet": "^5.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/react-router": "^4.0.19",
    "@types/react-router-dom": "^4.2.3",
    "@types/react-test-renderer": "^16.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.1",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  }
}
